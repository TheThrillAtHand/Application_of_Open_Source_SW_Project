<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="143dp"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/poinfullvilla" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="포인풀빌라"
                android:textColor="@color/black"
                android:fontFamily="@font/malgun"
                android:textStyle="bold"
                android:textSize="20dp"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="장소: 경기도 가평군 북면" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="번호: 010-8750-8661" />

            <Button
                android:id="@+id/product_rental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rentalcolor"
                android:fontFamily="@font/malgun"
                android:text="상세보기"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="143dp"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cielmain" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="르시엘펜션"
                android:textColor="@color/black"
                android:fontFamily="@font/malgun"
                android:textStyle="bold"
                android:textSize="20dp"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="장소: 전라남도 여수시 돌산읍" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="번호: 010-8750-8661" />

            <Button
                android:id="@+id/product_rental2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rentalcolor"
                android:fontFamily="@font/malgun"
                android:text="상세보기"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"

        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"

        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"

        ></LinearLayout>


</LinearLayout>